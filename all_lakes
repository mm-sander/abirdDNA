  group_by(habitat_short, ka) %>%
  summarise(taxonReads=sum(taxonReads, na.rm=T)) %>% ungroup() %>%
  group_by(ka) %>%
  mutate(percentage = taxonReads / sum(taxonReads) * 100) %>% ungroup()
